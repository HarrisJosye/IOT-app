<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/all_services"
        android:id="@+id/all_service_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:layout_margin="8dp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/all_service_list_rec_view"
        android:layout_below="@+id/all_service_label"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_alignStart="@+id/all_service_label">
    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:id="@+id/graph_fab"
        android:src="@drawable/ic_timeline"
        app:borderWidth="2dp"
        app:fabSize="normal" />

</RelativeLayout>