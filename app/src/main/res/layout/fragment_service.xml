<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeviceFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Service Name"
        android:id="@+id/fragment_service_name"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:layout_margin="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/fragment_service_type"
        android:layout_below="@+id/fragment_service_name"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:layout_margin="12dp"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn On Led"
        android:id="@+id/button_turn_on"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/fragment_service_type"
        android:layout_alignEnd="@+id/button_turn_off"
        android:layout_alignStart="@+id/button_turn_off" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn Off Led"
        android:id="@+id/button_turn_off"
        android:layout_below="@+id/button_turn_on"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Led Status"
        android:id="@+id/led_status_text"
        android:layout_below="@+id/button_turn_off"
        android:layout_alignStart="@+id/button_turn_off" />


</RelativeLayout>